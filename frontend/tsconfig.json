{
  "$schema": "https://json.schemastore.org/tsconfig",
  "include": [
    "./__mocks__/**/*",
    "./.react-router/types/**/*",
    "./.react-router/types/**/.server/**/*",
    "./app/**/*",
    "./app/**/.client/**/*",
    "./app/**/.server/**/*",
    "./e2e/**/*",
    "./server/**/*",
    "./tests/**/*",
    "./tests/**/.client/**/*",
    "./tests/**/.server/**/*",
    "./eslint.config.ts",
    "./playwright.config.ts",
    "./prettier.config.ts",
    "./react-router.config.ts",
    "./checks-runner.ts",
    "./vite.config.ts",
    "./vite.server.config.ts",
    "./vitest.workspace.ts"
  ],
  "compilerOptions": {
    "baseUrl": ".",
    "checkJs": true,
    "composite": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "module": "ESNext",
    "moduleResolution": "bundler",
    "noEmit": true,
    "paths": {
      "~/*": ["./app/*"]
    },
    "resolveJsonModule": true,
    "rootDirs": ["./", "./.react-router/types"],
    "skipLibCheck": true,
    "strict": true,
    "target": "ES2022",
    "types": ["@react-router/node", "vite/client"]
  }
}
